<div id="tabs-{{ id }}">
    <ul class="nav nav-tabs{{ class|space }}" role="tablist"{{ attributes|space|raw }}>
        {% for item in items %}
            {% set active = item.active ? ' active' : '' %}
            <li class="nav-item{{ active }}{{ nav_item_class|space }}" role="presentation">
                {% set tab_id = id ~ '-tab' ~ loop.index %}
                <a id="{{ tab_id }}-link" data-toggle="tab" data-target="#{{ tab_id }}" role="tab" aria-controls="{{ tab_id }}">{{ item.title|raw }}</a>
            </li>
        {% endfor %}
    </ul>
    <div class="tab-content">
        {% for item in items %}
            {% set tab_id = id ~ '-tab' ~ loop.index %}
            {% set active = item.active ? ' in active' : '' %}
            <div class="tab-pane fade{{ tab_item_class|space ~ active }}" id="{{ tab_id }}" role="tabpanel" aria-labelledby="{{ tab_id }}-link">{{ item.content|raw }}</div>
        {% endfor %}
    </div>
</div>
