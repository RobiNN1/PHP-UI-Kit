<div class="alert {{ color }}{{ class|space }}{{ dismiss ? ' alert-dismissible' : '' }}" role="alert"{{ attributes|space|raw }}>
    {{- text|raw -}}
    {%- if dismiss -%}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    {% endif %}
</div>
