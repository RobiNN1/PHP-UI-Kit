<div class="accordion{{ class|space }}" id="accordion-{{ id }}"{{ attributes|space|raw }}>
    {% for title, body in items %}
        {% set collapse_id = id ~ loop.index %}

        <div class="card{{ item_class|space }}">
            <div class="card-header" id="heading-{{ collapse_id }}">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left{{ first_open and loop.first ? '' : ' collapsed' }}" type="button"
                            data-toggle="collapse" data-target="#collapse-{{ collapse_id }}" aria-expanded="true"
                            aria-controls="collapse-{{ collapse_id }}">{{ title|raw }}</button>
                </h2>
            </div>
            <div id="collapse-{{ collapse_id }}" class="collapse{{ first_open and loop.first ? ' show' : '' }}"
                 aria-labelledby="heading-{{ collapse_id }}" data-parent="#accordion-{{ id }}">
                <div class="card-body">{{ body|raw }}</div>
            </div>
        </div>
    {% endfor %}
</div>
