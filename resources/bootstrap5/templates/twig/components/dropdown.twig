<div class="dropdown{{ class|space }}"{{ attributes|space|raw }}>
    {{ button|raw }}
    <ul class="dropdown-menu" aria-labelledby="dropdown-{{ id }}">
        {% for item in items %}
            {% if item == 'divider' %}
                <li>
                    <hr class="dropdown-divider">
                </li>
            {% elseif item.custom %}
                {{ item.custom|raw }}
            {% else %}
                {% if item.link %}
                    <li>
                        <a class="dropdown-item{{ item_class|space }}{{ item.class|space }}" href="{{ item.link }}">{{ item.title|raw }}</a>
                    </li>
                {% else %}
                    <li>
                        <span class="dropdown-item-text{{ item_class|space }}{{ item.class|space }}">{{ item.title|raw }}</span>
                    </li>
                {% endif %}
            {% endif %}

        {% endfor %}
    </ul>
</div>
