{{ add_to_jquery("$('.ui.dropdown').dropdown();") }}

<div class="ui dropdown{{ class|space }}" id="dropdown-{{ id }}"{{ attributes|space|raw }}>
    {{ button|raw }}
    <div class="menu">
        {% for item in items %}
            {% if item == 'divider' %}
                <div class="divider"></div>
            {% elseif item.custom %}
                {{ item.custom|raw }}
            {% else %}
                {% if item.link %}
                    <a class="item{{ item_class|space }}{{ item.class|space }}" href="{{ item.link }}">{{ item.title|raw }}</a>
                {% else %}
                    <span class="item{{ item_class|space }}{{ item.class|space }}">{{ item.title|raw }}</span>
                {% endif %}
            {% endif %}
        {% endfor %}
    </div>
</div>
