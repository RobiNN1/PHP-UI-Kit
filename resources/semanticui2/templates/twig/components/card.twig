<div class="ui fluid card{{ class|space }}"{{ attributes|space|raw }}>
    {% if top_img %}
        <img class="image" src="{{ top_img.src }}" alt="{{ top_img.alt }}">
    {% endif %}
    {% if header %}
        <div class="content">{{ header|raw }}</div>
    {% endif %}
    {{ top|raw }}
    {% if body %}
        <div class="content">{{ body|raw }}</div>
    {% endif %}
    {{ bottom|raw }}
    {% if footer %}
        <div class="content">{{ footer|raw }}</div>
    {% endif %}
</div>
