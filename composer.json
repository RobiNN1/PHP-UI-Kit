{
  "name": "robinn/uikit",
  "description": "PHP UI Kit with support for multiple CSS frameworks.",
  "keywords": ["templating", "twig", "bootstrap", "semantic-ui", "css", "framework"],
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Róbert Kelčák",
      "email": "robo@kelcak.com",
      "homepage": "https://kelcak.com"
    }
  ],
  "support": {
    "issues": "https://github.com/RobiNN1/PHP-UI-Kit/issues",
    "source": "https://github.com/RobiNN1/PHP-UI-Kit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4||^8.0",
    "ext-dom": "*",
    "twig/twig": "^3"
  },
  "require-dev": {
    "gajus/dindent": "^2.0",
    "phpstan/phpstan": "^1.4",
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "RobiNN\\UiKit\\": "src/"
    },
    "files": [
      "helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "phpstan",
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  }
}
