{
  "name": "robinn/uikit",
  "description": "UI Kit with support for multiple CSS frameworks and template engines.",
  "keywords": ["templating", "twig", "latte", "plates", "bootstrap", "semantic0ui", "css", "framework"],
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Róbert Kelčák",
      "email": "robo@kelcak.com",
      "homepage": "https://kelcak.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.4||^8.0",
    "ext-dom": "*",
    "twig/twig": "^3"
  },
  "suggest": {
    "latte/latte": "Required to use Latte template engine.",
    "league/plates": "Required to use Plates template engine."
  },
  "require-dev": {
    "phpstan/phpstan": "^1.4",
    "phpunit/phpunit": "^9",
    "gajus/dindent": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "RobiNN\\UiKit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse"
  }
}
