{{ add_to_head('<link rel="stylesheet" href="'~ fw_path() ~ 'swiper/swiper-bundle.min.css">') }}
{{ add_to_footer('<script src="'~ fw_path() ~ 'swiper/swiper-bundle.min.js"></script>') }}
{{ add_to_head('<style>.swiper{width:100%;height:auto;}</style>') }}
{{ add_to_footer('<script>new Swiper("#carousel-'~ id ~'",{loop:true,pagination:{el:".swiper-pagination"},navigation:{nextEl:".swiper-button-next",prevEl:".swiper-button-prev"}});</script>') }}

<div id="carousel-{{ id }}" class="swiper{{ class|space }}"{{ attributes|space|raw }}>
    <div class="swiper-wrapper">
        {% for slide in slides %}
            <div class="swiper-slide{{ item_class|space }}">{{ slide|raw }}</div>
        {% endfor %}
    </div>

    {% if indicators %}
        <div class="swiper-pagination"></div>
    {% endif %}

    {% if controls %}
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    {% endif %}
</div>
